# Przykładowa konfiguracja Nginx dla aplikacji BRONA (client-side)
# Skopiuj do /etc/nginx/sites-available/brona i dostosuj ścieżki

server {
    listen 80;
    listen [::]:80;
    
    # Zmień na swoją domenę
    server_name brona.twojadomena.pl;
    
    # Ścieżka do plików aplikacji
    root /var/www/cepik;
    index index.html;
    
    # Obsługa wszystkich requestów
    location / {
        try_files $uri $uri/ /index.html;
    }
    
    # Kompresja gzip dla lepszej wydajności
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_types
        text/plain
        text/css
        text/xml
        text/javascript
        application/javascript
        application/json
        application/xml
        application/xml+rss;
    
    # Cache statycznych plików (CSS, JS)
    location ~* \.(css|js)$ {
        expires 1d;
        add_header Cache-Control "public, immutable";
    }
    
    # Bezpieczeństwo - ukryj wersję nginx
    server_tokens off;
    
    # Nagłówki bezpieczeństwa
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    
    # Logi
    access_log /var/log/nginx/brona_access.log;
    error_log /var/log/nginx/brona_error.log;
}

